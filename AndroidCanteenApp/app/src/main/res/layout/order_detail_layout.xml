<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/background_middle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="?attr/background_middle">

        <ImageView
            android:id="@+id/my_orders_detail_product_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical|start"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_orders_detail_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|start"
                android:textStyle="bold"
                android:textColor="?attr/text_color_green"
                android:fontFamily="@font/cairo_light"
                android:text="Product name"/>

            <TextView
                android:id="@+id/my_orders_detail_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|start"
                android:textColor="?attr/text_color_green"
                android:fontFamily="@font/cairo_light"
                android:text="Product quantity"/>

            <TextView
                android:id="@+id/my_orders_detail_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|start"
                android:textColor="?attr/text_color_green"
                android:fontFamily="@font/cairo_light"
                android:text="Product price"/>

            <TextView
                android:id="@+id/my_orders_detail_product_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical|start"
                android:textColor="?attr/text_color_green"
                android:fontFamily="@font/cairo_light"
                android:text="Product discount"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>