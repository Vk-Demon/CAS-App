<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignupActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/registerjs" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:background="@drawable/nflogobgcva"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:id="@+id/bt3signup1"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginTop="415dp"
            android:background="@drawable/btn_sbg"
            android:clickable="true"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/suptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/maven_pro"
                android:text="REGISTER"
                android:textColor="@color/Dark"
                android:textSize="12sp" />

        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSignup"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/neonYellow"
            app:boxStrokeColor="@color/neonYellow"
            app:boxStrokeErrorColor="@color/white"
            app:counterTextColor="@color/white"
            app:errorTextColor="@color/white"
            app:hintTextColor="@color/neonYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tipetsignup1"
                android:layout_width="310dp"
                android:layout_height="44dp"
                android:drawableStart="@drawable/ic_email_neon_yellow_24dp"
                android:drawableLeft="@drawable/ic_email_neon_yellow_24dp"
                android:drawablePadding="5dp"
                android:hint="Email ID"
                android:textSize="13sp"
                android:fontFamily="@font/ubuntu_light"
                android:inputType="textEmailAddress"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:singleLine="true"
                android:textColor="@color/neonYellow"
                android:textColorHint="@color/neonYellow" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSignup2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="20dp"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/neonYellow"
            app:boxStrokeColor="@color/neonYellow"
            app:boxStrokeErrorColor="@color/white"
            app:counterTextColor="@color/white"
            app:errorTextColor="@color/white"
            app:hintTextColor="@color/neonYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/richelectricBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tipetsignup2"
                android:layout_width="310dp"
                android:layout_height="44dp"
                android:drawableStart="@drawable/ic_lock_neon_yellow_24dp"
                android:drawableLeft="@drawable/ic_lock_neon_yellow_24dp"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:textSize="13sp"
                android:fontFamily="@font/ubuntu_light"
                android:inputType="textPassword"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:singleLine="true"
                android:textColor="@color/neonYellow"
                android:textColorHint="@color/neonYellow" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSignup3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="20dp"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/neonYellow"
            app:boxStrokeColor="@color/neonYellow"
            app:boxStrokeErrorColor="@color/white"
            app:counterTextColor="@color/white"
            app:errorTextColor="@color/white"
            app:hintTextColor="@color/neonYellow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/richelectricBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tipetsignup3"
                android:layout_width="310dp"
                android:layout_height="44dp"
                android:drawableStart="@drawable/ic_lock_neon_yellow_24dp"
                android:drawableLeft="@drawable/ic_lock_neon_yellow_24dp"
                android:drawablePadding="5dp"
                android:hint="Confirm Password"
                android:textSize="13sp"
                android:fontFamily="@font/ubuntu_light"
                android:inputType="textPassword"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:singleLine="true"
                android:textColor="@color/neonYellow"
                android:textColorHint="@color/neonYellow" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/ubuntu_light"
            android:text="Create an account"
            android:textColor="@color/neonYellow"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="365dp"
            android:fontFamily="@font/maven_pro"
            android:text='By clicking on "Register" you agree to our Terms of Use'
            android:textColor="@color/richelectricBlue"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maven_pro"
            android:text="and Privacy Policy."
            android:textColor="@color/richelectricBlue"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/loginback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="475dp"
            android:fontFamily="@font/maven_pro"
            android:text="Back to Sign up"
            android:textColor="@color/richelectricBlue"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/recaptchalayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:outlineProvider="none"
                android:paddingTop="4dp"
                android:paddingEnd="-10dp"
                app:layout_constraintBottom_toBottomOf="@+id/fp_recaptcha"
                app:layout_constraintEnd_toEndOf="@+id/fp_recaptcha"
                app:layout_constraintTop_toTopOf="@+id/fp_recaptcha"
                app:srcCompat="@drawable/recapt" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-42dp"
                android:text="I'm not a robot"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp" />

        </FrameLayout>

        <CheckBox
            android:id="@+id/sup_recaptcha"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@color/white"
            android:button="@drawable/checkbox"
            android:gravity="start"
            android:outlineProvider="bounds"
            android:padding="5dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"
            app:layout_constraintStart_toStartOf="@+id/frameLayout2"
            app:layout_constraintTop_toTopOf="@+id/frameLayout2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/nylogocircle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>