<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/acc_frag_my_profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:backgroundTint="#162252"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        app:titleTextColor="?attr/text_color_yellow"
        app:title="Account > My Profile"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolbarTextAppearance"
        app:navigationIcon="@drawable/ic_account_circle_neon_yellow_24dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/nflogobgcva"
        app:layout_constraintTop_toBottomOf="@+id/acc_frag_my_profile_toolbar">


        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/updateprofile" />

        <EditText
            android:id="@+id/my_prof_name"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="340dp"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/my_prof_bg"
            android:singleLine="true"
            android:textColor="@color/neonYellow"
            android:textColorHint="@color/neonYellow"
            android:textSize="13sp"
            android:fontFamily="@font/ubuntu_light"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:focusableInTouchMode="true"
            app:boxStrokeErrorColor="@color/white"
            app:counterTextColor="@color/white"
            app:errorTextColor="@color/white"
            android:paddingStart="5dp"
            android:drawableStart="@drawable/ic_account_box_neon_yellow_24dp"
            android:drawablePadding="5dp"
            android:paddingEnd="8dp" />


        <EditText
            android:id="@+id/my_prof_contact"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="230dp"
            android:hint="Enter your contact number"
            android:inputType="phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/my_prof_bg"
            android:singleLine="true"
            android:textColor="@color/neonYellow"
            android:textColorHint="@color/neonYellow"
            android:textSize="13sp"
            android:fontFamily="@font/ubuntu_light"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:focusableInTouchMode="true"
            app:boxStrokeErrorColor="@color/white"
            app:counterTextColor="@color/white"
            app:errorTextColor="@color/white"
            android:paddingStart="8dp"
            android:drawableStart="@drawable/ic_contact_phone_neon_yellow_24dp"
            android:drawablePadding="5dp"
            android:paddingEnd="8dp"
            />

        <EditText
            android:id="@+id/my_prof_email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="120dp"
            android:hint="Enter your email address"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/my_prof_bg"
            android:singleLine="true"
            android:textColor="@color/neonYellow"
            android:textColorHint="@color/neonYellow"
            android:textSize="13sp"
            android:fontFamily="@font/ubuntu_light"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:focusableInTouchMode="true"
            app:boxStrokeErrorColor="@color/white"
            app:counterTextColor="@color/white"
            app:errorTextColor="@color/white"
            android:paddingStart="8dp"
            android:drawableStart="@drawable/ic_contact_mail_neon_yellow_24dp"
            android:drawablePadding="5dp"
            android:paddingEnd="8dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Username:"
            android:textSize="13sp"
            android:textColor="@color/neonYellow"
            android:fontFamily="@font/ubuntu_light"
            app:layout_constraintBottom_toTopOf="@+id/my_prof_name"
            app:layout_constraintStart_toStartOf="@+id/my_prof_name" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/ubuntu_light"
            android:textSize="13sp"
            android:textColor="@color/neonYellow"
            android:text="Contact no:"
            app:layout_constraintBottom_toTopOf="@+id/my_prof_contact"
            app:layout_constraintStart_toStartOf="@+id/my_prof_contact" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textSize="13sp"
            android:textColor="@color/neonYellow"
            android:fontFamily="@font/ubuntu_light"
            android:text="Email ID:"
            app:layout_constraintBottom_toTopOf="@+id/my_prof_email"
            app:layout_constraintStart_toStartOf="@+id/my_prof_email" />

        <info.hoang8f.widget.FButton
            android:id="@+id/my_prof_save_btn"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:fontFamily="@font/maven_pro"
            android:text="UPDATE"
            android:enabled="true"
            android:textColor="@color/Dark"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_prof_email" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>