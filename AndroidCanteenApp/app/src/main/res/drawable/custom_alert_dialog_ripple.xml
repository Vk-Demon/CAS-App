<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:color="?attr/alert_dialog_select">
        <shape
            android:shape="rectangle">
            <solid
                android:color="?attr/alert_dialog_select"/>

            <corners
                android:radius="30dp"/>
        </shape>
    </item>
    <item android:color="?attr/alert_dialog_select">
        <shape
            android:shape="rectangle">
            <solid
                android:color="?attr/dialog_tint"/>

            <corners
                android:radius="30dp"/>
        </shape>
    </item>
</selector>